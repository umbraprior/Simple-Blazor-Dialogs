<div class="p-4">
    <h4>@Title</h4>
    <p>@Message</p>
    <div class="mt-3">
        <small class="text-muted">
            This dialog demonstrates parameterized content.
            <br />
            Current time: @DateTime.Now.ToString("HH:mm:ss")
        </small>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Default Title";
    [Parameter] public string Message { get; set; } = "Default message content.";
    [Parameter] public EventCallback OnClose { get; set; }
} 